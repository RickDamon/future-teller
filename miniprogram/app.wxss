page {
  background-color: #0c0f16;
  color: #f5f5f5;
  font-family: "PingFang SC", "Noto Sans SC", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  min-height: 100vh;
}

button {
  border-radius: 999px;
  background: linear-gradient(120deg, #4ad5c0, #7f6df2);
  color: #0b0f16;
  border: none;
  font-weight: 600;
}

button:disabled {
  opacity: 0.5;
}

.text-muted {
  color: rgba(255, 255, 255, 0.65);
}

.card {
  background: rgba(18, 24, 37, 0.88);
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 20px 45px rgba(4, 5, 12, 0.75);
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  margin: 20px 0 10px;
}
