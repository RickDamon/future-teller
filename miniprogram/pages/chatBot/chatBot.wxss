.page {
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding-bottom: 80px;
}

.profile-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.name {
  font-size: 28px;
  font-weight: 600;
}

.realm-line {
  margin-top: 4px;
  color: rgba(255, 255, 255, 0.7);
  font-size: 14px;
}

.root {
  padding: 6px 14px;
  border-radius: 999px;
  background: rgba(122, 193, 255, 0.2);
  border: 1px solid rgba(122, 193, 255, 0.35);
}

.rank-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 8px 0 4px;
  gap: 12px;
}

.rank-chip {
  padding: 6px 18px;
  border-radius: 999px;
  background: rgba(147, 204, 255, 0.18);
  border: 1px solid rgba(147, 204, 255, 0.35);
  font-weight: 600;
}

.fame-pill {
  padding: 6px 12px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.08);
  font-size: 14px;
}

.progress-wrapper {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6px;
  margin-top: 10px;
  color: rgba(255, 255, 255, 0.7);
}

.vital-panels {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 12px;
}

.vital-block {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 14px;
  padding: 10px 14px;
}

.vital-header {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 6px;
}

.vital-bar {
  width: 100%;
  height: 8px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.08);
  overflow: hidden;
}

.vital-fill {
  height: 100%;
  border-radius: 999px;
}

.vital-fill.hp {
  background: linear-gradient(90deg, #f78b83, #f24c6d);
}

.vital-fill.mana {
  background: linear-gradient(90deg, #44dafb, #6d8bff);
}

.combat-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
  gap: 10px;
  margin-top: 14px;
}

.combat-item {
  padding: 12px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.04);
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stats-grid {
  margin-top: 16px;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.stat-item {
  padding: 12px;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 12px;
}

.label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
}

.value {
  display: block;
  margin-top: 4px;
  font-size: 18px;
  font-weight: 600;
}

.attributes {
  margin-top: 16px;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
}

.attr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.04);
  padding: 10px 14px;
  border-radius: 10px;
}

.actions .action-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.action {
  padding: 14px 0;
  font-size: 16px;
}

.breakthrough {
  grid-column: span 2;
}

.log-card {
  max-height: 280px;
}

.log-panel {
  max-height: 220px;
  margin-top: 12px;
  border-radius: 12px;
  background: rgba(12, 16, 26, 0.8);
  padding: 12px;
}

.log-item {
  padding: 8px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  font-size: 14px;
  line-height: 1.4;
}

.log-item:last-child {
  border-bottom: none;
}

.log-empty {
  text-align: center;
  color: rgba(255, 255, 255, 0.5);
  padding: 24px 0;
}

.reset {
  width: 100%;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.25);
  color: rgba(255, 255, 255, 0.8);
}

.loading-state {
  padding: 120px 24px;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
}
