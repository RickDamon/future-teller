<view class="page">
  <view class="hero card">
    <view class="eyebrow">灵境轻语</view>
    <view class="title">{{heroTitle}}</view>
    <view class="glimpse">{{glimpse}}</view>
    <view class="description">{{description}}</view>
    <button class="primary" bindtap="navigateToChatBot">踏入仙途</button>
  </view>

  <view class="card" wx:if="{{profilePreview}}">
    <view class="section-title">上次修行轨迹</view>
    <view class="profile-grid">
      <view class="profile-item">
        <text class="label">道号</text>
        <text class="value">{{profilePreview.name}}</text>
      </view>
      <view class="profile-item">
        <text class="label">境界</text>
        <text class="value">{{profilePreview.realm}}</text>
      </view>
      <view class="profile-item">
        <text class="label">实龄</text>
        <text class="value">{{profilePreview.age}} 岁</text>
      </view>
      <view class="profile-item">
        <text class="label">剩余寿元</text>
        <text class="value">{{profilePreview.lifespan}} 年</text>
      </view>
    </view>

    <view class="rank-banner">
      <view class="rank-chip">{{profilePreview.rank}}</view>
      <view class="luck-read">
        <text class="label">气运</text>
        <text class="value">{{profilePreview.luck}}</text>
      </view>
    </view>

    <view class="preview-combat">
      <view class="combat-pill">
        <text class="pill-label">攻击</text>
        <text class="pill-value">{{profilePreview.attack}}</text>
      </view>
      <view class="combat-pill">
        <text class="pill-label">防御</text>
        <text class="pill-value">{{profilePreview.defense}}</text>
      </view>
    </view>

    <view class="preview-vitals">
      <view class="vital">
        <text class="label">气血</text>
        <text class="value">{{profilePreview.hp}}</text>
      </view>
      <view class="vital">
        <text class="label">灵力</text>
        <text class="value">{{profilePreview.mana}}</text>
      </view>
    </view>

    <button class="ghost" bindtap="navigateToChatBot">继续修行</button>
  </view>

  <view class="features card">
    <view class="section-title">玩法亮点</view>
    <block wx:for="{{features}}" wx:key="title">
      <view class="feature-item">
        <view class="feature-title">{{item.title}}</view>
        <view class="feature-desc">{{item.desc}}</view>
      </view>
    </block>
  </view>
</view>