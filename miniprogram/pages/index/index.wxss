.page {
  padding: 32px 24px 80px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.hero {
  background: linear-gradient(145deg, rgba(43, 68, 122, 0.9), rgba(18, 30, 55, 0.95));
  border: 1px solid rgba(106, 144, 255, 0.2);
}

.eyebrow {
  font-size: 12px;
  letter-spacing: 0.4em;
  text-transform: uppercase;
  color: rgba(255, 255, 255, 0.7);
}

.title {
  font-size: 32px;
  font-weight: 600;
  margin: 8px 0;
}

.glimpse {
  font-size: 18px;
  color: #9ad8ff;
  margin-bottom: 12px;
}

.description {
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.6;
  margin-bottom: 24px;
}

.primary {
  width: 100%;
}

.ghost {
  width: 100%;
  margin-top: 20px;
  background: transparent;
  color: #9ad8ff;
  border: 1px solid rgba(154, 216, 255, 0.3);
}

.profile-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.profile-item {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 12px;
  padding: 12px;
}

.rank-banner {
  margin: 16px 0 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.rank-chip {
  padding: 6px 16px;
  border-radius: 999px;
  background: rgba(123, 177, 255, 0.16);
  border: 1px solid rgba(123, 177, 255, 0.4);
  font-weight: 600;
}

.luck-read {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 10px 14px;
  min-width: 120px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-combat {
  display: flex;
  gap: 12px;
  margin-top: 8px;
}

.combat-pill {
  flex: 1;
  padding: 12px 14px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pill-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
}

.pill-value {
  font-size: 18px;
  font-weight: 600;
}

.preview-vitals {
  display: flex;
  gap: 12px;
  margin-top: 12px;
}

.vital {
  flex: 1;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 12px;
  padding: 12px 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
}

.value {
  font-size: 18px;
  font-weight: 600;
}

.features {
  border: 1px solid rgba(255, 255, 255, 0.06);
}

.feature-item + .feature-item {
  border-top: 1px solid rgba(255, 255, 255, 0.06);
  margin-top: 12px;
  padding-top: 12px;
}

.feature-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 4px;
}

.feature-desc {
  color: rgba(255, 255, 255, 0.72);
  line-height: 1.5;
}
